# Multi-stage build for Python microservices
FROM python:3.11-slim as base

# Set environment variables
ENV PYTHONUNBUFFERED=1 \
    PYTHONDONTWRITEBYTECODE=1 \
    UV_SYSTEM_PYTHON=1

# Install system dependencies and uv
RUN apt-get update && apt-get install -y \
    curl \
    && rm -rf /var/lib/apt/lists/* \
    && curl -LsSf https://astral.sh/uv/install.sh | sh

# Add uv to PATH
ENV PATH="/root/.local/bin:$PATH"

# Set working directory
WORKDIR /app

# Copy requirements and install Python dependencies with uv
COPY deployment/dev/requirements.txt .
RUN uv pip install --no-cache -r requirements.txt

# Copy application code
COPY core/ ./core/
COPY microservices/ ./microservices/
COPY deployment/ ./deployment/

# Create logs directory
RUN mkdir -p logs

# Health check (will be overridden per service)
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD curl -f http://localhost:${SERVICE_PORT:-8200}/health || exit 1

# Environment variables for service configuration
ENV SERVICE_NAME="" \
    SERVICE_PORT="" \
    ENVIRONMENT="development"

# Default command (will be overridden when running container)
# Use shell form to allow environment variable expansion
CMD python -m uvicorn microservices.${SERVICE_NAME}.main:app --host 0.0.0.0 --port ${SERVICE_PORT}
