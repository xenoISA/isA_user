# =============================================================================
# Staging Environment Configuration for ISA User Platform
# =============================================================================
# K8s staging cluster configuration
# =============================================================================

# Environment
ENVIRONMENT=staging
DEBUG=false
LOG_LEVEL=INFO

# Consul (service discovery)
CONSUL_ENABLED=true
CONSUL_HOST=consul.isa-cloud-staging.svc.cluster.local
CONSUL_PORT=8500

# Native Infrastructure (K8s services)
POSTGRES_HOST=postgres.isa-cloud-staging.svc.cluster.local
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_DB=isa_platform

REDIS_HOST=redis.isa-cloud-staging.svc.cluster.local
REDIS_PORT=6379
REDIS_DB=0

QDRANT_HOST=qdrant.isa-cloud-staging.svc.cluster.local
QDRANT_PORT=6333

NEO4J_HOST=neo4j.isa-cloud-staging.svc.cluster.local
NEO4J_PORT=7687
NEO4J_USER=neo4j

MINIO_HOST=minio.isa-cloud-staging.svc.cluster.local
MINIO_PORT=9000
MINIO_SECURE=false

NATS_HOST=nats.isa-cloud-staging.svc.cluster.local
NATS_PORT=4222
NATS_URL=nats://nats.isa-cloud-staging.svc.cluster.local:4222

MQTT_HOST=emqx.isa-cloud-staging.svc.cluster.local
MQTT_PORT=1883

# Loki (observability)
LOKI_ENABLED=false
