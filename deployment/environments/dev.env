# =============================================================================
# Development Environment Configuration for ISA User Platform
# =============================================================================
# Local dev uses Kind cluster infrastructure with port-forwards
# =============================================================================

# Environment
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=DEBUG

# Consul (service discovery) - enable for local dev
CONSUL_ENABLED=true
CONSUL_HOST=localhost
CONSUL_PORT=8500
SERVICE_HOST=127.0.0.1

# Native Infrastructure (via port-forward from Kind cluster)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=staging_postgres_2024
POSTGRES_DB=isa_platform

REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=staging_redis_2024

QDRANT_HOST=localhost
QDRANT_PORT=6333

NEO4J_HOST=localhost
NEO4J_PORT=7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=staging_neo4j_2024

MINIO_HOST=localhost
MINIO_PORT=9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=staging_minio_2024
MINIO_SECURE=false

NATS_HOST=localhost
NATS_PORT=4222
NATS_URL=nats://localhost:4222

MQTT_HOST=localhost
MQTT_PORT=1883

# Loki (observability) - disable for local dev
LOKI_ENABLED=false

# Inter-service communication (local dev)
ORGANIZATION_SERVICE_HOST=localhost
ORGANIZATION_SERVICE_PORT=8212
